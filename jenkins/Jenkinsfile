pipeline {

  agent {
    docker {
      image 'gradle:alpine'
      args '-p 8888:8888 -v /home/gradle:/home/gradle'
    }
  }

  stages {

    stage('Build') {
      steps {
        sh 'gradle clean assemble'
      }
    }

    stage('Test') {
      steps {
        sh 'gradle test'
      }
      post {
        always {
          junit 'build/test-results/test/*.xml'
        }
      }
    }

    stage('Test-BDD') {
      steps {
        sh 'gradle cucumber'
      }
    }

    stage('Deploy') {
      steps {
        sh 'jenkins/scripts/deploy.sh'
      }
    }


  }

}
