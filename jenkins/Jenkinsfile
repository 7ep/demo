pipeline {

  agent any


  environment {
    DEMO_PROJECT_HOME   =  "${env.WORKSPACE}"
    POSTGRES_BIN_DIR    = '/usr/pgsql-10/bin'
  }

  stages {

    stage('Build') {
      steps {
        sh './gradlew clean assemble'
      }
    }

    stage('Database migration') {
      steps {
        sh './gradlew flywayMigrate -i'
      }
    }

    stage('Unit Tests') {
      steps {
        sh './gradlew test'
      }
      post {
        always {
          junit 'build/test-results/test/*.xml'
        }
      }
    }

    stage('Static Analysis') {
      steps {
        sh './gradlew sonarqube'
      }
    }

    stage('Integration Tests') {
      steps {
        sh './gradlew fastIntegrationTest'
      }
      post {
        always {
          junit 'build/test-results/test/*.xml'
        }
      }
    }

    stage('BDD Tests') {
      steps {
        sh './gradlew cucumber'
        sh './gradlew generateCucumberReports'
      }
    }

    stage('Build deployable') {
      steps {
        sh './gradlew buildProduct'
      }
    }

    stage('Deploy to test') {
      steps {
        sh 'scp -r /var/lib/jenkins/workspace/demo/build/output/demo brk@10.0.2.16:~/'
      }
    }

    stage('Run on test') {
      steps {
        sh 'ssh brk@10.0.2.16 demo/stop.sh'
        sh 'ssh brk@10.0.2.16 demo/start.sh &'
      }
    }

  }

}
