pipeline {

  agent {
    docker {
      image 'gradle:alpine'
      args '-v /home/gradle:/home/gradle'
    }
  }

  stages {

    stage('Build') {
      steps {
        sh 'gradle clean assemble'
      }
    }

    stage('Test') {
      steps {
        sh 'gradle cucumber'
        sh 'gradle test'
      }
      post {
        always {
          junit 'build/test-results/test/*.xml'
        }
      }
    }

  }

}
